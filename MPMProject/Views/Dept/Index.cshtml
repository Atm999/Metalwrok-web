@{
    @model Model.dept
}
<!DOCTYPE html>
<html>
<head>
    <!-- / jquery -->
    <script src='~/assets/javascripts/jquery/jquery.min.js' type='text/javascript'></script>
    <script type='text/javascript'>
         getOption();
        $(document).ready(function () {
            $("#deptSelects").select2();
            $.fn.modal.Constructor.prototype.enforceFocus = function () { }
        });



        $(function () {

            $('.navigation ul li:nth-of-type(1) ul').attr("class", "nav nav-stacked in");
            $('.navigation ul li:nth-of-type(1) ul li:nth-of-type(7)').addClass('active');

            $('#table').bootstrapTable({
                url: '/Dept/GetData',
               method: 'get',
                theadClasses: "thead-blue",
                pagination: true,
                sidePagination: "client",//分页方式：client客户端(前台)分页，server服务端（后台）分页（*）
                pageNumber: 1,//初始化加载第一页，默认第一页
                pageSize: 10,//每页的记录行数（*）
                pageList: [10, 25, 50, 100],//可供选择的每页的行数（*）
                columns: [{
                    field: 'no',
                    title: '序号',
                    formatter: function (value, row, index) {
                        var options = $('#table').bootstrapTable('getOptions');
                        return index + 1;
                    }
                }, {
                    field: 'id',
                    title: '序号',
                    visible: false

                }, {
                    field: 'name_en',
                    title: '部门名称（英）'
                }, {
                    field: 'name_tw',
                    title: '部门名称（繁中）'
                }, {
                    field: 'name_cn',
                    title: '部门名称（简中）'
                }, {
                    field: 'description',
                    title: '描述'
                }, {
                    field: 'actionEvent',
                    title: '操作',
                    align: 'center',
                    valign: 'middle',
                    formatter: actionFormatter,
                    events: operateEvents
                }]
            });
        });
        //操作栏的格式化
        function actionFormatter(value, row, index) {
            var id = value;
            var result = "";
            result += "<a class='edit ml10'; href='javascript:;'  title='编辑'  style='font-size:32px;'><span class='icon-edit-sign'></span></a>";
            result += "<a class='remove ml10';  href='javascript:;' title='删除' data-toggle='modal'  style='font-size:32px;'><span class='icon-trash'></span></a>";
            return result;
        }

        window.operateEvents = {
            'click .edit': function (e, value, row, index) {
                document.getElementById("id").value = row.id;
                document.getElementById("name_en").value = row.name_en;
                document.getElementById("name_tw").value = row.name_tw;
                document.getElementById("name_cn").value = row.name_cn;
                document.getElementById("description").value = row.description;
                $('#myEditModal').modal('show');
            },
            'click .remove': function (e, value, row, index) {
                document.getElementById("id").value = row.id;
                $('#myDelModal').modal('show');

            }
        };
        function Delete() {
            var id = $('#id').val();
            var dept = {
                id: id
            };
            $.ajax({
                type: "POST",
                url: "/Dept/Delete",
                data: JSON.stringify(dept),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (msg) {
                    if (msg == "Success") {
                        toastr.success('数据删除成功!');
                        $('#myDelModal').modal('hide');
                        $('#table').bootstrapTable('refresh');
                    } else {
                        toastr.error('执行失败!');
                    }
                }, error: function (msg) {
                    toastr.error('执行失败!');
                }
            });

        }
        function finish() {
            var id = $('#id').val();
            var name_en = $('#name_en').val();
            var name_tw = $('#name_tw').val();
            var name_cn = $('#name_cn').val();
            var description = $('#description').val();
            var dept = {
                id: id,
                name_en: name_en,
                name_tw: name_tw,
                name_cn: name_cn,
                description: description
            };
            if (id != 0) {
                $.ajax({
                    type: "POST",
                    url: "/Dept/Update",
                    data: JSON.stringify(dept),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (msg) {
                        if (msg == "Success") {
                            toastr.success('数据更新成功!');
                            $('#myEditModal').modal('hide');
                            $('#table').bootstrapTable('refresh');
                             getOption();
                            $("#deptSelects").empty();
                             
                        } else {
                            toastr.error('执行失败!部门名称不允许重复');
                        }
                    }, error: function (msg) {
                        toastr.error('执行失败!');
                    }
                });
            } else {
                $.ajax({
                    type: "POST",
                    url: "/Dept/Add",
                    data: JSON.stringify(dept),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (msg) {
                        if (msg == "Success") {
                            toastr.success('数据新增成功!');
                            $('#myEditModal').modal('hide');
                            $('#table').bootstrapTable('refresh');
                             getOption();
                             $("#deptSelects").empty();
                           
                        } else {
                            toastr.error('执行失败!部门名称不允许重复');
                        }
                    }, error: function (msg) {
                        toastr.error('执行失败!');
                    }
                });

            }

        }
        function clean() {
            $('#myEditModal').modal('show');
            document.getElementById("id").value = 0;
            document.getElementById("name_en").value = "";
            document.getElementById("name_tw").value = "";
            document.getElementById("name_cn").value = "";
            document.getElementById("description").value = "";
        }
        function search() {
          var dept_id = $("#deptSelects").val();
            $('#table').bootstrapTable('filterBy', { dept_id: dept_id},
                {
                    //自定义刷选函数
                    'filterAlgorithm': function (row, filters) {
                        var result1 = true;//定义一个返回结果
                        if (filters.dept_id > 0) {
                            result1 = filters.dept_id == row.id;
                        }
                        return result1;
                    }
                }); 
        }

         function getOption() {
            $.ajax({
                type: "get",
                url: '/Person/Getdept',
                async: true,
                success: function (data) {
                      $("#deptSelects").empty();
                      $("#deptSelects").append('<option  value=' + 0 + '>请选择</option>');
                    for (var i = 0; i < data.length; i++) {
                        $("#deptSelects").append('<option  value=' + data[i].id + '>' + data[i].name_cn + '</option>');
                    }
                }
            });
        }
    </script>
</head>
<body>
    <div class='row-fluid'>
        <div class="span12">
            <div class='page-header'>
                <div class='pull-left' style="font-size:18px">
                    <a  style="color:#008FD7;font-weight:600"><span>公共配置</span></a>
                    <i class='icon-angle-right'></i>
                    <span>部门列表</span>
                </div>


            </div>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span12 box bordered-box'>
            <div class="box-content box-padding">
                <form class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="name">部门</label>

                    </div>
                    <div class="form-group">
                        <select class="select2" id="deptSelects">
                            <option value="0">请选择</option>
                        </select>
                    </div>
                    @*<div class="form-group">
            <div class="form-group">
                <input class="span10" type="text" id="namecn" name="name_cn"/>
            </div>
        </div>*@
                    <div class="form-group">
                        <button onclick="search()" data-toggle='modal' class="btn btn-primary"><span class="icon-search"> 查询</span></button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span12 box bordered-box'>
            <div class="box-content box-padding">
                <div style="padding:14px 0px">
                    <div class="form-group">
                        <button class="btn btn-primary" onclick="clean()" data-toggle='modal' ><span class="icon-plus"> 新增</span></button>
                    </div>
                </div>


                <table class="table" id="table"></table>
            </div>
           
            <!-- 编辑模态框（Modal） -->
            <div class="modal fade" id="myEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                新增/编辑
                            </h4>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" class="span12" id="id" name="id" />
                            <div class="control-group">
                                <label class="control-label">部门名称（英）</label>
                                <input class="span12" type="text" id="name_en" name="name_en" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">部门名称（繁中）</label>
                                <input class="span12" type="text" id="name_tw" name="name_tw" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">部门名称（简中）</label>
                                <input class="span12" type="text" id="name_cn" name="name_cn" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">描述</label>
                                <input class="span12" type="text" id="description" name="description" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                取消
                            </button>
                            <button onclick="finish()" class="btn btn-primary">
                                确认
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
            <!-- 删除模态框（Modal） -->
            <div class="modal fade" id="myDelModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                删除
                            </h4>
                        </div>
                        <div class="modal-body">
                            <div>是否确认删除该条记录？</div>
                            <input type="hidden" id="deleteId" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                否
                            </button>
                            <button type="button"  onclick="Delete()" class="btn btn-primary">
                                是
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
        </div>
    </div>
</body>
</html>