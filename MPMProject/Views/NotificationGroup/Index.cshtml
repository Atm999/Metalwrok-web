@{
    @model Model.notification_group
}
<!DOCTYPE html>
<html>
<head>
    <!-- / jquery -->
    <script src='~/assets/javascripts/jquery/jquery.min.js' type='text/javascript'></script>
    <script type='text/javascript'>

        $(document).ready(function () {
            $("#machineSelects").select2();
            $.fn.modal.Constructor.prototype.enforceFocus = function () { }
        });

        $(function () {
            $('.navigation ul li:nth-of-type(2) ul').attr("class", "nav nav-stacked in");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(8) ul').attr("class", "nav nav-stacked");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(9) ul').attr("class", "nav nav-stacked");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(10) ul').attr("class", "nav nav-stacked");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(5)').addClass('active');
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(8) ul li:nth-of-type(5)').removeClass('active');
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(9) ul li:nth-of-type(5)').removeClass('active');
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(10) ul li:nth-of-type(5)').removeClass('active');
            toastr.options = {
                "closeButton": true,//显示关闭按钮
                "positionClass": "toast-bottom-right",//弹出的位置
                "showDuration": "300",//显示的时间
                "hideDuration": "1000",//消失的时间
                "timeOut": "5000",//停留的时间
                "extendedTimeOut": "1000",//控制时间
                "showEasing": "swing",//显示时的动画缓冲方式
                "hideEasing": "linear",//消失时的动画缓冲方式
                "showMethod": "fadeIn",//显示时的动画方式
                "hideMethod": "fadeOut"//消失时的动画方式
            };

            $('#table').bootstrapTable({
                url: '/NotificationGroup/GetData',
                method: 'get',
                theadClasses: "thead-blue",
                pagination: true,
                sidePagination: "client",//分页方式：client客户端(前台)分页，server服务端（后台）分页（*）
                pageNumber: 1,//初始化加载第一页，默认第一页
                pageSize: 10,//每页的记录行数（*）
                pageList: [10, 25, 50, 100],//可供选择的每页的行数（*）
                columns: [{
                    field: 'no',
                    title: '序号',
                    formatter: function (value, row, index) {
                        var options = $('#table').bootstrapTable('getOptions');
                        return index + 1;
                    }
                }, {
                    field: 'name_en',
                    title: '群组名称（英）'
                }, {
                    field: 'name_tw',
                    title: '群组名称（繁中）'
                }, {
                    field: 'name_cn',
                    title: '群组名称（简中）'
                }, {
                    field: 'user_name',
                    title: '人员列表',
                    formatter: function (value, row, index) {
                        var persons = row.person;
                        var PList = new Array(persons.length);
                        var i = 0;
                        persons.forEach(v => {
                            PList[i] = v.user_name;
                            i++;
                        });
                        return PList.toString();
                    },
                }, {
                    field: 'description',
                    title: '描述'
                }, {
                    field: 'actionEvent',
                    title: '操作',
                    align: 'center',
                    valign: 'middle',
                    formatter: actionFormatter,
                    events: operateEvents
                }]
            });
            //设备绑定中，已绑定的设备
            $('#machineList').bootstrapTable({
                // url: '/LevelsConfig/GetMachineList',
                method: 'get',
                theadClasses: "thead-blue",
                striped: true,  //表格显示条纹，默认为false
                pagination: true,
                sidePagination: "client",//分页方式：client客户端(前台)分页，server服务端（后台）分页（*）
                pageNumber: 1,//初始化加载第一页，默认第一页
                pageSize: 12,//每页的记录行数（*）
                undefinedText: '---', //当数据为 undefined 时显示的字符
                paginationDetailHAlign: 'left',
                toolbarAlign: 'right',
                columns: [{
                    field: 'no',
                    title: '序号',
                    formatter: function (value, row, index) {
                        var options = $('#machineList').bootstrapTable('getOptions');
                        return index + 1;
                    }
                }, {
                    field: 'user_name',
                    title: '员工名称'
                }, {
                    field: 'id_num',
                    title: '员工工号'
                }, {
                    field: 'actionEvent',
                    title: '取消绑定',
                    formatter: machineNodeActionFormatter,
                    events: machineNodeOperateEvents
                }]
            });
        });
        //绑定设备-解除绑定
        function machineNodeActionFormatter(value, row, index) {
            var result = "";
            result += "<a id='deleteMachineNode' href='javascript:;' title='取消绑定' style='font-size:32px;'><span class='icon-trash'></span></a>";
            return result;
        }
        //绑定设备-解除绑定操作
        window.machineNodeOperateEvents = {
            //取消绑定
            "click #deleteMachineNode": function (e, value, row, index) {
                var id = row.person_id;//人员id
                var group_id = $("#group_id").val();//群组id
                $.ajax({
                    type: "POST",
                    url: "/NotificationGroup/DeleteMachine",
                    data: {
                        id: id,
                        group_id: group_id
                    },
                    success: function (msg) {
                        if (msg == "Success") {
                            toastr.success('人员解绑成功!');
                            $('#machineList').bootstrapTable('refresh', { url: "/NotificationGroup/GetmachineList?group_id=" + group_id });
                            $("#machineSelects").empty();
                            $.ajax({
                                type: "get",
                                url: '/NotificationGroup/Getperson?group_id=' + group_id,
                                async: true,
                                success: function (data) {
                                    $("#machineSelects").append('<option  value=' + 0+ '>请选择</option>');
                                    for (var i = 0; i < data.length; i++) {
                                        $("#machineSelects").append('<option  value=' + data[i].id + '>' + data[i].user_name + '</option>');
                                    }
                                }
                            });

                        }
                        else {
                            toastr.error('执行失败!');
                        }
                    }, error: function (msg) {
                        toastr.error('执行失败!');
                    }
                });
            }
        }
        //操作栏的格式化
        function actionFormatter(value, row, index) {
            var id = value;
            var result = "";
            result += "<a class='Binding m110' href='javascript:;'  title='添加人员'  style='font-size:32px;'><span class='icon-sitemap'></span></a>";
            result += "<a class='edit ml10'; href='javascript:;'  title='编辑'  style='font-size:32px;'><span class='icon-edit-sign'></span></a>";
            result += "<a class='remove ml10';  href='javascript:;' title='删除' data-toggle='modal'  style='font-size:32px;'><span class='icon-trash'></span></a>";
            return result;
        }
        window.operateEvents = {
            'click .edit': function (e, value, row, index) {
                document.getElementById("id").value = row.id;
                document.getElementById("name_en").value = row.name_en;
                document.getElementById("name_tw").value = row.name_tw;
                document.getElementById("name_cn").value = row.name_cn;
                document.getElementById("description").value = row.description;
                $('#myEditModal').modal('show');
            },
            'click .remove': function (e, value, row, index) {
                document.getElementById("id").value = row.id;
                $('#myDelModal').modal('show');

            }, 'click .Binding': function (e, value, row, index) {
                document.getElementById("group_id").value = row.id;
                var group_id = $("#group_id").val();
                $('#machineList').bootstrapTable('refresh', { url: "/NotificationGroup/GetmachineList?group_id=" + group_id });
                $('#machineModal').modal('show');
                $("#machineSelects").empty();
                getOption();
            }
        };
        function Delete() {
            var id = $('#id').val();
            var dept = {
                id: id
            };
            $.ajax({
                type: "POST",
                url: "/NotificationGroup/Delete",
                data: JSON.stringify(dept),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (msg) {
                    if (msg == "Success") {
                        toastr.success('数据删除成功!');
                        $('#myDelModal').modal('hide');
                        $('#table').bootstrapTable('refresh');
                    } else {
                        toastr.error('执行失败!');
                    }
                }, error: function (msg) {
                    toastr.error('执行失败!');
                }
            });

        }
        function finish() {
            var id = $('#id').val();
            var name_en = $('#name_en').val();
            var name_tw = $('#name_tw').val();
            var name_cn = $('#name_cn').val();
            var description = $('#description').val();
            var dept = {
                id: id,
                name_en: name_en,
                name_tw: name_tw,
                name_cn: name_cn,
                description: description
            };
            if (id != 0) {
                $.ajax({
                    type: "POST",
                    url: "/NotificationGroup/Update",
                    data: JSON.stringify(dept),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (msg) {
                        if (msg == "Success") {
                            toastr.success('数据更新成功!');
                            $('#myEditModal').modal('hide');
                            $('#table').bootstrapTable('refresh');
                        } else {
                            toastr.error('执行失败!');
                        }
                    }, error: function (msg) {
                        toastr.error('执行失败!');
                    }
                });
            } else {
                $.ajax({
                    type: "POST",
                    url: "/NotificationGroup/Add",
                    data: JSON.stringify(dept),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (msg) {
                        if (msg == "Success") {
                            toastr.success('数据新增成功!');
                            $('#myEditModal').modal('hide');
                            $('#table').bootstrapTable('refresh');
                        } else {
                            toastr.error('执行失败!');
                        }
                    }, error: function (msg) {
                        toastr.error('执行失败!');
                    }
                });

            }

        }
        function clean() {
            $('#myEditModal').modal('show');
            document.getElementById("id").value = 0;
            document.getElementById("name_en").value = "";
            document.getElementById("name_tw").value = "";
            document.getElementById("name_cn").value = "";
            document.getElementById("description").value = "";
        }
        function getOption() {
            var group_id = $("#group_id").val();
            $.ajax({
                type: "get",
                url: '/NotificationGroup/Getperson?group_id=' + group_id,
                async: true,
                success: function (data) {
                     $("#machineSelects").append('<option  value=' + 0+ '>请选择</option>');
                    for (var i = 0; i < data.length; i++) {
                        $("#machineSelects").append('<option  value=' + data[i].id + '>' + data[i].user_name + '</option>');
                    }
                }
            });
        }

        function finishP() {
            var group_id = $('#id').val();
            var machineSelects = $('#machineSelects').val();
            var group = {
                group_id: group_id,
                person_id: machineSelects

            };
            $.ajax({
                type: "POST",
                url: "/NotificationGroup/Update",
                data: JSON.stringify(group),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (msg) {
                    if (msg == "Success") {
                        toastr.success('数据更新成功!');
                        $('#myEditModal').modal('hide');
                        $('#table').bootstrapTable('refresh');
                    } else {
                        toastr.error('执行失败!');
                    }
                }, error: function (msg) {
                    toastr.error('执行失败!');
                }
            });
        }

        function MachineBind() {
            var group_id = $("#group_id").val();
            var machineList = document.getElementById('machineSelects').getElementsByTagName('option');
            var machine = new Array();
            for (var i = 0; i < machineList.length; i++) {
                if (machineList[i].selected) {
                    machine.push(machineList[i].value);
                }
            }
            var Machine = machine.join(',');
            $.ajax({
                type: "POST",
                url: "/NotificationGroup/AddPerson",
                data: {
                    id: 0,
                    group_id: group_id,
                    Machine: Machine
                },
                success: function (msg) {
                    if (msg == "Success") {
                        toastr.success('人员绑定成功!');
                        $('#machineModal').modal('hide');
                        $('#table').bootstrapTable('refresh', { url: "/NotificationGroup/GetData" });
                        $("#machineSelects").empty();
                    }
                    else {
                        toastr.error('执行失败!');
                    }
                }, error: function (msg) {
                    toastr.error('执行失败!');
                }
            });
        }
        function resush() {
            $('#table').bootstrapTable('refresh', { url: "/NotificationGroup/GetData" });
        }
    </script>
</head>
<body>
    <div class='row-fluid'>
        <div class="span12">
            <div class='page-header'>
                <div class='pull-left' style="font-size:18px">
                    <a href="#" style="color:#008FD7;font-weight:600"><span>安灯异常管理</span></a>
                    <i class='icon-angle-right'></i>
                    <span>通知群组</span>
                </div>


            </div>
        </div>
    </div>

    <div class='row-fluid'>
        <div class='span12 box bordered-box'>
            <div class="box-content box-padding">
                <div style="padding:14px 0px">
                    <div class="form-group">
                        <button class="btn btn-primary" onclick="clean()" data-toggle='modal'><span class="icon-plus"> 新增</span></button>
                    </div>
                </div>


                <table class="table" id="table"></table>
            </div>

            <!-- 编辑模态框（Modal） -->
            <div class="modal fade" id="myEditModal" style="display:none">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                新增/编辑
                            </h4>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" class="span12" id="id" name="id" />
                            <div class="control-group">
                                <label class="control-label">群组名称（英）</label>
                                <input class="span12" type="text" id="name_en" name="name_en" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">群组名称（繁中）</label>
                                <input class="span12" type="text" id="name_tw" name="name_tw" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">群组名称（简中）</label>
                                <input class="span12" type="text" id="name_cn" name="name_cn" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">描述</label>
                                <input class="span12" type="text" id="description" name="description" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                取消
                            </button>
                            <button onclick="finish()" class="btn btn-primary">
                                确认
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
            <!-- 删除模态框（Modal） -->
            <div class="modal fade" id="myDelModal" style="display:none">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                删除
                            </h4>
                        </div>
                        <div class="modal-body">
                            <div>是否确认删除该条记录？</div>
                            <input type="hidden" id="deleteId" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                否
                            </button>
                            <button type="button" onclick="Delete()" class="btn btn-primary">
                                是
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>


            <!-- 设备绑定模态框（Modal） -->
            <div class="modal fade" id="machineModal" style="display:none">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myBindLabel">
                                人员绑定
                            </h4>
                        </div>
                        <div class="modal-body">
                            <input class='span12' type="hidden" id="group_id" />
                            <div class="control-group">
                                <select class="select2 span12" id="machineSelects" multiple="" style="width:100%"></select>
                            </div>
                            <hr class="hr-top" style="margin-right:-14px" />
                            <div class="control-group">
                                <h4>已绑定的人员</h4>
                            </div>
                            <div class="control-group">
                                <table class="table" id="machineList"></table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" onclick="resush()" data-dismiss="modal">
                                取消
                            </button>
                            <button type="button" class="btn btn-primary" onclick="MachineBind()">
                                确认
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
        </div>
    </div>
</body>
</html>