@{
    @model Model.Person
}
<!DOCTYPE html>
<html>
<head>
    <!-- / jquery -->
    <script src='~/assets/javascripts/jquery/jquery.min.js' type='text/javascript'></script>
    <script type='text/javascript'>
        $(document).ready(function () {
            $("#deptname").select2(); 
            $("#dept_id").select2(); 
            $.fn.modal.Constructor.prototype.enforceFocus = function () { }
        });

        $(function () {
            $('.navigation ul li:nth-of-type(2) ul').attr("class", "nav nav-stacked in");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(4) ul').attr("class", "nav nav-stacked");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(1)').addClass('active');
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(4) ul li:nth-of-type(1)').removeClass('active');

            $('#table').bootstrapTable({
                url: '/Person/GetData',
                method: 'get',
                theadClasses: "thead-blue",
                pagination: true,
                sidePagination: "client",//分页方式：client客户端(前台)分页，server服务端（后台）分页（*）
                pageNumber: 1,//初始化加载第一页，默认第一页
                pageSize: 10,//每页的记录行数（*）
                pageList: [10, 25, 50, 100],//可供选择的每页的行数（*）
                columns: [{
                    field: 'id',
                    title: '序号'
                }, {
                    field: 'dept_id',
                    title: '部门'
                }, {
                    field: 'user_name',
                    title: '员工名称'
                }, {
                    field: 'id_num',
                    title: '员工工号'
                }, {
                    field: 'user_level',
                    title: '员工职位'
                }, {
                    field: 'email',
                    title: '邮箱'
                }, {
                    field: 'wechart',
                    title: '微信'
                }, {
                    field: 'mobile_phone',
                    title: '手机号'
                }, {
                    field: 'actionEvent',
                    title: '操作',
                    align: 'center',
                    valign: 'middle',
                    formatter: actionFormatter,
                    events: operateEvents
                }]
            });
        });
        //操作栏的格式化
        function actionFormatter(value, row, index) {
            var id = value;
            var result = "";
            result += "<a href='javascript:;'  title='编辑' data-toggle='modal'  style='font-size:32px;'><span class='icon-edit-sign'></span></a>";
            result += "<a href='javascript:;' title='删除' data-toggle='modal'  style='font-size:32px;'><span class='icon-trash'></span></a>";
            return result;
        }

        window.operateEvents = {
            'click .edit': function (e, value, row, index) {
                document.getElementById("id").value = row.id;
                document.getElementById("name_en").value = row.name_en;
                document.getElementById("name_tw").value = row.name_tw;
                document.getElementById("name_cn").value = row.name_cn;
                document.getElementById("description").value = row.description;
                $('#myEditModal').modal('show');
            },
            'click .remove': function (e, value, row, index) {
                document.getElementById("id").value = row.id;
                $('#myDelModal').modal('show');

            }
        };
        function clean() {
            $('#myEditModal').modal('show');
            document.getElementById("id").value = 0;
            document.getElementById("dept_id").value = "";
            document.getElementById("user_name").value = "";
            document.getElementById("id_num").value = "";
            document.getElementById("user_level").value = "";
            document.getElementById("email").value = "";
            document.getElementById("wechart").value = "";
            document.getElementById("mobile_phone").value = "";
        }
        function Delete() {
            var id = $('#id').val();
            var dept = {
                id: id
            };
            $.ajax({
                type: "POST",
                url: "/Person/Delete",
                data: JSON.stringify(dept),
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                success: function (msg) {
                    if (msg == "Success") {
                        alert("执行成功");
                        $('#myDelModal').modal('hide');
                        $('#table').bootstrapTable('refresh');
                    } else {
                        alert("执行失败");
                    }
                }, error: function (msg) {
                    alert("执行失败");
                }
            });

        }
        function finish() {
            var id = $('#id').val();
            var name_en = $('#name_en').val();
            var name_tw = $('#name_tw').val();
            var name_cn = $('#name_cn').val();
            var description = $('#description').val();
            var dept = {
                id: id,
                name_en: name_en,
                name_tw: name_tw,
                name_cn: name_cn,
                description: description
            };
            if (id != 0) {
                $.ajax({
                    type: "POST",
                    url: "/Person/Update",
                    data: JSON.stringify(dept),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (msg) {
                        if (msg == "Success") {
                            alert("执行成功");
                            $('#myEditModal').modal('hide');
                            $('#table').bootstrapTable('refresh');
                        } else {
                            alert("执行失败");
                        }
                    }, error: function (msg) {
                        alert("执行失败");
                    }
                });
            } else {
                $.ajax({
                    type: "POST",
                    url: "/Person/Add",
                    data: JSON.stringify(dept),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (msg) {
                        if (msg == "Success") {
                            alert("执行成功");
                            $('#myEditModal').modal('hide');
                            $('#table').bootstrapTable('refresh');
                        } else {
                            alert("执行失败");
                        }
                    }, error: function (msg) {
                        alert("执行失败");
                    }
                });

            }

        }
        function search() {
            var userlevel = $('#userlevel').val();
            var username = $('#username').val();
            var dept = $("#deptname").find("option:selected").val();
            if (userlevel == "" || username == "" || dept == "") {
                $('#table').bootstrapTable('filterBy');
            } else {
                $('#table').bootstrapTable('filterBy', {
                    user_level: userlevel,
                    user_name: username,
                    dept_id: dept
                }, { 'filterAlgorithm': 'or' });
            }

        }
    </script>
</head>
<body>
    <div class='row-fluid'>
        <div class="span12">
            <div class='page-header'>
                <div class='pull-left' style="font-size:18px">
                    <a href="#" style="color:#008FD7;font-weight:600"><span>安灯异常管理</span></a>
                    <i class='icon-angle-right'></i>
                    <span>人员列表</span>
                </div>


            </div>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span12 box bordered-box'>
            <div class="box-content box-padding">
                <form class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="name">部门</label>
                    </div>
                    <div class="form-group">
                        <select class="select2" id="deptname">
                            <option value="1">Circle Time</option>
                            <option value="2">Error</option>
                            <option value="3">LightTower</option>
                            <option value="4">Other</option>
                            <option value="5">ProductionSchedule</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="name">职位</label>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <input type="text" class="span11" id="userlevel" name="user_level" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="name">姓名</label>
                    </div>
                    <div class="form-group">
                        <input type="text" class="span11" />
                    </div>
                    <div class="form-group">
                        <button onclick="search()" data-toggle='modal' class="btn btn-primary"><span class="icon-search"> 查询</span></button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span12 box bordered-box'>
            <div class="box-content box-padding">

                <div style="padding:14px 0px">
                    <div class="form-group">
                        <button class="btn btn-primary" onclick="clean()" data-toggle='modal'><span class="icon-plus"> 新增</span></button>
                    </div>
                </div>

                <table class="table" id="table"></table>
            </div>
            <!-- 编辑模态框（Modal） -->
            <div class="modal fade" id="myEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                新增/编辑
                            </h4>
                        </div>
                        <div class="modal-body">
                            <div class="control-group">
                                <label class="control-label">部门</label>
                                <select class="select2 span12" id="dept_id" name="dept_id">
                                    <option value="1">Circle Time</option>
                                    <option value="2">Error</option>
                                    <option value="3">LightTower</option>
                                    <option value="4">Other</option>
                                    <option value="5">ProductionSchedule</option>
                                </select>
                            </div>
                            <div class="control-group">
                                <label class="control-label">员工名称</label>
                                <input class="span12" type="text" id="user_name" name="user_name" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">员工工号</label>
                                <input class="span12" type="text" id="id_num" name="id_num" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">员工职位</label>
                                <input class="span12" type="text" id="user_level" name="user_level" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">邮箱</label>
                                <input class="span12" type="text" id="email" name="email" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">微信</label>
                                <input class="span12" type="text" id="wechart" name="wechart" />
                            </div>
                            <div class="control-group">
                                <label class="control-label">手机号</label>
                                <input class="span12" type="text" id="mobile_phone" name="mobile_phone" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                取消
                            </button>
                            <button type="button" onclick="finish()" class="btn btn-primary">
                                确认
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
            <!-- 删除模态框（Modal） -->
            <div class="modal fade" id="myDelModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                                删除
                            </h4>
                        </div>
                        <div class="modal-body">
                            <div>是否确认删除该条记录？</div>
                            <input type="hidden" id="deleteId" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                否
                            </button>
                            <button type="button" onclick="Delete()" class="btn btn-primary">
                                是
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
        </div>
    </div>
</body>
</html>