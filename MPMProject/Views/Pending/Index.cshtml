@{
    @model Model.error_log
}
<!DOCTYPE html>
<html>
<head>
    <!-- / jquery -->
    <script src='~/assets/javascripts/jquery/jquery.min.js' type='text/javascript'></script>
    <script src="~/grafanaUIframe/script/lib/bootstrap.min.js"></script>
    <script type='text/javascript'>
           getOption();
        $(document).ready(function () {
            $("#machine_name").select2(); 
            $.fn.modal.Constructor.prototype.enforceFocus = function () { }
        });


        $(function () {
           $('.navigation ul li:nth-of-type(2) ul').attr("class", "nav nav-stacked in");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(4) ul').attr("class", "nav nav-stacked");
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(6)').addClass('active');
            $('.navigation ul li:nth-of-type(2) ul li:nth-of-type(4) ul li:nth-of-type(6)').removeClass('active');

            toastr.options = {
                "closeButton": true,//显示关闭按钮
                "positionClass": "toast-bottom-right",//弹出的位置
                "showDuration": "300",//显示的时间
                "hideDuration": "1000",//消失的时间
                "timeOut": "5000",//停留的时间
                "extendedTimeOut": "1000",//控制时间
                "showEasing": "swing",//显示时的动画缓冲方式
                "hideEasing": "linear",//消失时的动画缓冲方式
                "showMethod": "fadeIn",//显示时的动画方式
                "hideMethod": "fadeOut"//消失时的动画方式
            };
             //页面定时刷新
            setInterval(function() {
                $('#table').bootstrapTable("refresh");
            }, 20000);
            $('#table').bootstrapTable({
                url: '/Pending/GetData',
                method: 'get',
                theadClasses: "thead-blue",
                pagination: true,
                sidePagination: "client",//分页方式：client客户端(前台)分页，server服务端（后台）分页（*）
                pageNumber: 1,//初始化加载第一页，默认第一页
                pageSize: 10,//每页的记录行数（*）
                pageList: [10, 25, 50, 100],//可供选择的每页的行数（*）
                columns: [{
                    field: 'no',
                    title: '序号',
                    formatter: function (value, row, index) {
                        var options = $('#table').bootstrapTable('getOptions');
                        return index + 1;
                    }
                }, {
                    field: 'machine_name',
                    title: '设备名'
                }, {
                    field: 'work_order',
                    title: '工单'
                }, {
                    field: 'part_number',
                    title: '机种'
                }, {
                    field: 'responsible_name',
                    title: '责任人'
                }, {
                    field: 'substitutes',
                    title: '接单人'
                },{
                    field: 'start_time',
                        title: '发生时间',
                     formatter: function (value, row, index)
                    {
                        var start_time = row.start_time.toString();
                          if (start_time == "0001-01-01T08:00:00+08:00") {
                              return "--"
                          }  else {
                              return  row.start_time;
                          }
                      
                 },
                }, {
                    field: 'actionEvent',
                    title: '接单',
                    align: 'center',
                    valign: 'middle',
                    formatter: actionFormatter,
                    events: operateEvents
                }]
            });
        });
        //操作栏的格式化
        function actionFormatter(value, row, index) {
            var id = value;
            var result = "";
            result += "<a class='edit ml10'; href='javascript:;'  title='接单'  style='font-size:32px;'><span class='icon-edit-sign'></span></a>";
            return result;
        }

        window.operateEvents = {
            'click .edit': function (e, value, row, index) {
                document.getElementById("id").value = row.id;
                  document.getElementById("name").value = "";
                $('#myEditModal').modal('show');
            }
        };
      
        function finish() {
            var id = $('#id').val();
            var name = $('#name').val();
            var dept = {
                id: id,
                name: name,
            };
            
                $.ajax({
                    type: "POST",
                    url: "/Pending/Update",
                    data: JSON.stringify(dept),
                    dataType: "json",
                    contentType: "application/json;charset=utf-8",
                    success: function (msg) {
                        if (msg == "Success") {
                            toastr.success('数据更新成功!');
                            $('#myEditModal').modal('hide');
                            $('#table').bootstrapTable('refresh');
                        } else {
                            toastr.error('执行失败!');
                        }
                    }, error: function (msg) {
                        toastr.error('执行失败!');
                    }
                });
            
        }
        function clean() {
            $('#myEditModal').modal('show');
          
        }
         function search() {
           var machine_name = $("#machine_name option:checked").text();
             $('#table').bootstrapTable('filterBy', { machine_name: machine_name  },
                {
                    //自定义刷选函数
                    'filterAlgorithm': function (row, filters) {
                        var result1 = true;//定义一个返回结果
                        if (filters.machine_name != "请选择") //如果user_name不为空，则进行判断，否则不管
                        {
                            result1 = filters.machine_name == row.machine_name;
                        }
                        return result1;
                    }
                });
        }
        function getOption() {
            $.ajax({
                type: "get",
                url: '/Pending/Getmachine',
                async: true,
                success: function (data) {
                    for (var i = 0; i < data.length; i++) {
                        $("#machine_name").append('<option  value=' + data[i].id + '>' + data[i].name_cn + '</option>');
                    }
                }
            });
        }
    </script>
</head>
<body>
    <div class='row-fluid'>
        <div class="span12">
            <div class='page-header'>
                <div class='pull-left' style="font-size:18px">
                    <a href="#" style="color:#008FD7;font-weight:600"><span>异常处理</span></a>
                    <i class='icon-angle-right'></i>
                    <span>待处理设备异常</span>
                </div>


            </div>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span12 box bordered-box'>
            <div class="box-content box-padding">
                <form class="form-inline">
                    <div class="form-group">
                        <label class="sr-only" for="name">设备名称</label>
                    </div>
                    <div class="form-group">
                        <select class="select2" id="machine_name">
                            <option value="">请选择</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button onclick="search()" data-toggle='modal' class="btn btn-primary"><span class="icon-search"> 查询</span></button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span12 box bordered-box'>
            <div class="box-content box-padding">
                <table class="table" id="table"></table>
            </div>

            <!-- 编辑模态框（Modal） -->
            <div class="modal fade" id="myEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                &times;
                            </button>
                            <h4 class="modal-title" id="myModalLabel">
                               责任人信息
                            </h4>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" class="span12" id="id" name="id" />
                            <div class="control-group">
                                <label class="control-label">人员卡号</label>
                                <input class="span12" type="text" id="name" name="name" />
                            </div>
                           
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">
                                取消
                            </button>
                            <button onclick="finish()" class="btn btn-primary">
                                确认
                            </button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
        </div>
    </div>
</body>
</html>