                columns: [{
                        field: 'no',
                        title: '序号',
                        formatter: function (value, row, index) {
                            //var options = $('#table').bootstrapTable('getOptions');
                            return  index + 1;
                        }
                    },{
                    field: 'name_en',
                    title: '类别名称(英)'
                }, {
                    field: 'name_cn',
                    title: '类别名称(简中)'
                }, {
                    field: 'name_tw',
                    title: '类别名称(繁中)'
                }, {
                    field: 'description',
                    title: '描述'
                }
                ]
            });
        });
      
    </script>
